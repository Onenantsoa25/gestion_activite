        // });

        // const chargesValues = data.charges.map(item => item.charges);

// Transformer les données pour Chart.js
        const labels = data.charges.map(item => {
            const d = new Date(item.date);
            return `${d.getDate().toString().padStart(2,'0')}-${(d.getMonth()+1).toString().padStart(2,'0')}-${d.getFullYear()}`;
        });

        const chargesValues = data.charges.map(item => item.charges);

        new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Nombre de tâches',
                    data: chargesValues,
                    backgroundColor: '#0178d9ff',
                    borderColor: '#1065abff',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    x: { title: { display: true, text: 'Date' }, grid: { display: false } },
                    y: { 
                        title: { display: true, text: 'Nombre de tâches' },
                        beginAtZero: true,
                        ticks: { precision: 0 },
                        grid: { color: '#e0e0e0' }
                    }
                }
            }
        });

    } catch (error) {
        console.error("Impossible de charger le tableau de bord :", error);
    }
});

