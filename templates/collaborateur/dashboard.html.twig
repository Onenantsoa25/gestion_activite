<script>
document.addEventListener('DOMContentLoaded', async function () {
    try {
        const response = await fetch('/api/collaborateur/dashboard');
        if (!response.ok) {
            throw new Error("Erreur lors de la récupération des données");
        }
        const data = await response.json();

        // Mettre à jour temps passé
        document.getElementById('temps_jour').textContent = data.jours + "h";
        document.getElementById('temps_semaine').textContent = data.semaine + "h";

        // Construire le camembert
        const ctxPie = document.getElementById('tasksPieChart');
        new Chart(ctxPie, {
            type: 'pie',
            data: {
                labels: ['En cours', 'À faire', 'Terminé'],
                datasets: [{
                    data: [data.encours, data.afaire, data.nonTermine], 
                    backgroundColor: ['#0d6efd', '#dc3545', '#198754'],
                    borderWidth: 1,
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false },
                }
            }
        });

        // Construire le graphique bar (charge de travail)
        const ctxBar = document.getElementById('workloadChart');

