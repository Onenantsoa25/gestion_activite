                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title mb-4 text-center">Charge de travail</h5>
                        <div style="height: 250px;"> {# Conteneur pour le graphique #}
                            <canvas id="workloadChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

