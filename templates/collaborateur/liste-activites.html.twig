    <div class="col-md-10">
    <main class="container-fluid py-4">
        <h1 class="mb-4 text-center">Liste des activités</h1>

        <div class="row g-4">
            {# Section du tableau des activités dans une carte #}
            <div class="col-md-12">
                <div class="card h-100">
                    <div class="card-body p-0">
                        <h5 class="card-title mb-3 px-4 pt-4 text-center">Détails des activités</h5>
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered mb-0"> {# Ajout de table-bordered pour des bordures claires #}
                                <thead>
                                    <tr>
                                        <th scope="col" class="table-header-gray">Activité</th>
                                        <th scope="col" class="table-header-gray col-action-buttons">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for activite in activites %}
                                        <tr data-activity-id="1" data-activity-status="not_started">
                                            <td class="align-middle">{{activite.activite}}</td>
                                            <td class="text-center-buttons">
                                                <a href="/collaborateur/taches/activite?id_activite={{activite.id}}"><i class="bi bi-eye-fill view-icon action-icon" title="Voir"></i></a>
                                                <i class="bi bi-stop-circle-fill end-icon action-icon action-icon" title="Terminer" ></i>
                                            </td>
                                        </tr>
                                    {% endfor %}
