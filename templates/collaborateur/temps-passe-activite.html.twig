                console.log('Commentaire:', commentaire);
                if (livrableFichier) {
                    console.log('Fichier livrable:', livrableFichier.name);
                } else {
                    console.log('Aucun fichier livrable sélectionné.');
                }

                // Ici, vous enverriez ces données à votre backend Symfony via Fetch API ou un formulaire traditionnel
