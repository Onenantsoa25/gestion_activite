    width: 35px;
    height: 30px;
    margin-bottom: 1rem;
    align-self: flex-end;
  }

  #toggleSidebarBtn span {
    display: block;
    height: 4px;
    background-color: #000;
    border-radius: 2px;
  }

  /* Responsive mobile */
  @media (max-width: 768px) {
    #toggleSidebarBtn {
      display: none;
    }

    #sidebarMenu {
      width: 100%;
      height: auto;
      position: relative;
    }

    #sidebarMenu.collapsed {
      display: block;
    }

    main {
      margin-left: 0;
    }
    html, body {
      overflow-x: hidden;
    }

  }
</style>

