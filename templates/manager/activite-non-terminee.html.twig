<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}Toutes les activités non terminées{% endblock %}</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>

  <style>
    body {
      padding-left: 280px;
      background-color: #F5F5F5;
      transition: padding-left 0.3s ease;
    }

    .sidebar-fixed-desktop {
      width: 280px;
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      background: linear-gradient(to bottom, #ffffffdc, #c8dbebff);
      padding: 1rem;
      z-index: 1050;
      overflow-y: auto;
    }

    @media (max-width: 767.98px) {
      body { padding-left: 0; }
      .sidebar-fixed-desktop { display: none; }
    }

    main.container-fluid {
      margin-left: 280px;
      width: calc(100% - 280px);
      padding: 1rem;
      transition: margin-left 0.3s ease, width 0.3s ease;
    }

    @media (max-width: 767.98px) {
      main.container-fluid { margin-left: 0; width: 100%; padding: 1rem 0.5rem; }
    }

    .mobile-menu-bar {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1100;
      background: white;
      padding: 0.75rem 1rem;
      box-shadow: 0 2px 6px rgb(0 0 0 / 0.1);
      align-items: center;
      justify-content: space-between;
    }
    @media (max-width: 767.98px) {
      .mobile-menu-bar { display: flex; }
    }

    /* Style cartes et tableau */
    .card {
      border-radius: 12px;
      border: 1px solid #e0e0e0;
      box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }

    .table-header-gray {
      background-color: #e9ecef;
      color: #343a40;
      font-weight: 600;
      text-transform: uppercase;
      font-size: 0.9rem;
    }

    .table td, .table th {
      vertical-align: middle;
      padding: 0.8rem 1.2rem;
    }

    .table td.text-center-buttons {
      text-align: center;
      white-space: nowrap;
    }

    .col-date-echeance {
      width: 150px;
      white-space: nowrap;
    }
  </style>
  {% block stylesheets %}{% endblock %}
</head>
<body>

  <!-- Sidebar fixe desktop -->
  <div class="sidebar-fixed-desktop">
    {% include 'components/sidebar-manager.html.twig' with {'active': 'activites'} %}
  </div>

  <!-- Barre mobile -->
  <div class="mobile-menu-bar d-md-none">
    <h5 class="mb-0">Menu</h5>
    <button class="btn btn-outline-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar">
      <i class="bi bi-list fs-4"></i>
    </button>
  </div>

  <!-- Sidebar mobile -->
  <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileSidebar">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title">Menu</h5>
      <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
      {% include 'components/sidebar-manager.html.twig' with {'active': 'activites'} %}
    </div>
  </div>

  <!-- Contenu principal -->
  <main class="container-fluid py-5">
    <h1 class="mb-5 text-center">Toutes les activités non terminées</h1>

    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        <div class="card h-100">
          <div class="card-body p-0">
            <h5 class="card-title mb-3 px-4 pt-4 text-center">Détails des activités</h5>
            <div class="table-responsive">
              <table class="table table-hover table-bordered mb-0">
                <thead>
                  <tr>
                    <th class="table-header-gray">Activité</th>
                    <th class="table-header-gray col-date-echeance">Date d'échéance</th>
                    <th class="table-header-gray text-center-buttons">Action</th>
                  </tr>
                </thead>
                <tbody>
                  {% for activite in activites %}
                    <tr>
                      <td>{{ activite.activite }}</td>
                      <td class="col-date-echeance">{{ activite.dateEcheance|date('d/m/Y') }}</td>
                      <td class="text-center-buttons">
                        <a href="/manager/activite/taches/{{activite.id}}" class="btn btn-sm btn-primary btn-icon" title="Voir les tâches">
                          <i class="bi bi-eye"></i>
                        </a>
                        {% if activite.dateDebut is null %}
                          <a href="/manager/activite/commencer/{{activite.id}}" class="btn btn-sm ms-2" style="background:#46b809; color:white;">Commencer</a>
                        {% else %}
                          <span class="badge bg-secondary ms-2">Déjà commencée</span>
                        {% endif %}
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    {% block page_content %}{% endblock %}
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  {% block javascripts %}{% endblock %}
</body>
</html>
