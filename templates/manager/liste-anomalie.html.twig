                    const anomalyType = row.querySelector('td:first-child').textContent;
                    const collaborator = row.querySelector('td:nth-child(2)').textContent;
                    const date = row.querySelector('td:nth-child(3)').textContent;

                    console.log(`Bouton 'Résoudre' cliqué pour l'anomalie ID: ${anomalyId}`);
