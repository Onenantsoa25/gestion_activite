<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste Anomalies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            padding-left: 280px;
            background-color: #F5F5F5;
            transition: padding-left 0.3s ease;
        }

        /* --- Sidebar --- */
        .sidebar-fixed-desktop {
            width: 280px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            background: linear-gradient(to bottom, #ffffffdc, #c8dbebff);
            padding: 1rem;
            z-index: 1050;
            overflow-y: auto;
        }

        @media (max-width: 767.98px) {
            body { padding-left: 0; }
            .sidebar-fixed-desktop { display: none; }
        }

        main.container-fluid {
            margin-left: 280px;
            width: calc(100% - 280px);
            padding: 1rem;
            transition: margin-left 0.3s ease, width 0.3s ease;
        }

        @media (max-width: 767.98px) {
            main.container-fluid { margin-left: 0; width: 100%; padding: 1rem 0.5rem; }
        }

        /* --- Mobile menu bar --- */
        .mobile-menu-bar {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1100;
            background: white;
            padding: 0.75rem 1rem;
            box-shadow: 0 2px 6px rgb(0 0 0 / 0.1);
            align-items: center;
            justify-content: space-between;
        }
        @media (max-width: 767.98px) {
            .mobile-menu-bar { display: flex; }
        }

        /* --- Carte Anomalie --- */
        .anomaly-card {
            border-radius: 12px;
            border: 1px solid #e0e0e0;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            padding: 1.2rem;
            margin-bottom: 1rem;
            background: #fff;
        }

        .anomaly-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 1rem;
        }

        .anomaly-date {
            font-size: 0.9rem;
            color: #6c757d;
        }

        /* --- Bouton Résoudre --- */
        .btn-resolve {
            background-color: #0d6efd;
            border: none;
            color: white;
            font-weight: 500;
            padding: 0.4rem 0.8rem;
            border-radius: 6px;
            transition: background-color 0.2s ease, transform 0.1s ease;
        }
        .btn-resolve:hover {
            background-color: #0b5ed7;
            transform: translateY(-1px);
        }
        .btn-resolve:disabled {
            background-color: #198754;
            cursor: not-allowed;
        }

        /* --- Styles pour messages longs --- */
        .anomaly-message {
            font-size: 1rem;
            color: #333;
            word-wrap: break-word;
            max-height: 120px;
            overflow: hidden;
            position: relative;
            margin: 0;
        }
        .anomaly-message.expanded {
            max-height: none;
        }

        .show-more {
            color: #0d6efd;
            cursor: pointer;
            font-size: 0.9rem;
            display: inline-block;
            margin-top: 0.3rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar Desktop -->
    <div class="sidebar-fixed-desktop">
        {% include 'components/sidebar-manager.html.twig' with {'active': 'anomalie'} %}
    </div>

    <!-- Barre mobile -->
    <div class="mobile-menu-bar d-md-none">
        <h5 class="mb-0">Menu</h5>
        <button class="btn btn-outline-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar">
            <i class="bi bi-list fs-4"></i>
        </button>
    </div>

    <!-- Sidebar Offcanvas Mobile -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileSidebar">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title">Menu</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            {% include 'components/sidebar-manager.html.twig' with {'active': 'anomalie'} %}
        </div>
    </div>

    <!-- Contenu -->
    <main class="container-fluid py-5">
        <h1 class="text-center mb-4">Liste des Anomalies</h1>

        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                {% for anomalie in anomalies %}
                    <div class="anomaly-card" data-anomaly-id="{{ anomalie.idAnomalie }}">
                        <div class="anomaly-header">
                            <div>
                                <div class="anomaly-message" id="message-{{ anomalie.idAnomalie }}">
                                    {{ anomalie.message }}
                                </div>
                                <span class="show-more" onclick="toggleMessage({{ anomalie.idAnomalie }})">
                                    Lire plus
                                </span>
                            </div>
                            <form method="get" action="/manager/anomalie/resoudre/{{anomalie.idAnomalie}}">
                                <button type="submit" class="btn btn-sm btn-resolve"
                                        {% if anomalie.estResolue %}disabled{% endif %}>
                                    <i class="bi bi-check-circle-fill"></i>
                                </button>
                            </form>
                        </div>
                        <br>
                        <div class="anomaly-date">
                            <i class="bi bi-clock"></i> {{ anomalie.dateAnomalie|date('d/m/Y H:i') }}
                        </div>
                    </div>
                {% else %}
                    <div class="alert alert-secondary text-center">
                        <i class="bi bi-info-circle"></i> Aucune anomalie trouvée
                    </div>
                {% endfor %}
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleMessage(id) {
            const message = document.getElementById(`message-${id}`);
            const toggle = message.nextElementSibling;

            if (message.classList.contains('expanded')) {
                message.classList.remove('expanded');
                toggle.textContent = "Lire plus";
            } else {
                message.classList.add('expanded');
                toggle.textContent = "Réduire";
            }
        }
    </script>
</body>
</html>
