<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}Modification tâche{% endblock %}</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <style>
    body {
      padding-left: 280px;
      background-color: #F5F5F5;
      transition: padding-left 0.3s ease;
    }

    .sidebar-fixed-desktop {
      width: 280px;
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      background: linear-gradient(to bottom, #ffffffdc, #c8dbebff);
      padding: 1rem;
      z-index: 1050;
      overflow-y: auto;
    }

    @media (max-width: 767.98px) {
      body { padding-left: 0; }
      .sidebar-fixed-desktop { display: none; }
    }

    main.container-fluid {
      margin-left: 280px;
      width: calc(100% - 280px);
      padding: 2rem 1rem;
      transition: margin-left 0.3s ease, width 0.3s ease;
    }

    @media (max-width: 767.98px) {
      main.container-fluid { margin-left: 0; width: 100%; padding: 1rem; }
    }

    /* Mobile menu */
    .mobile-menu-bar {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1100;
      background: white;
      padding: 0.75rem 1rem;
      box-shadow: 0 2px 6px rgb(0 0 0 / 0.1);
      align-items: center;
      justify-content: space-between;
    }
    @media (max-width: 767.98px) {
      .mobile-menu-bar { display: flex; }
    }

    /* Form styling */
    .card {
      border-radius: 12px;
      border: 1px solid #e0e0e0;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    }
    .form-label {
      font-weight: 500;
      color: #343a40;
      margin-bottom: 0.5rem;
    }
    .form-control, .form-select {
      border-radius: 8px;
      border: 1px solid #ced4da;
      padding: 0.75rem 1rem;
      box-shadow: inset 0 1px 2px rgba(0,0,0,0.05);
    }
    .form-control:focus, .form-select:focus {
      border-color: #80bdff;
      box-shadow: 0 0 0 0.25rem rgba(13,110,253,.25);
    }
    .btn-save {
      background-color: #0d6efd;
      border-color: #0d6efd;
      color: white;
      font-weight: bold;
      padding: 0.75rem 2rem;
      border-radius: 0.5rem;
    }
    .btn-save:hover {
      background-color: #0b5ed7;
      border-color: #0b5ed7;
    }
  </style>
  {% block stylesheets %}{% endblock %}
</head>
<body>

  <!-- Sidebar desktop -->
  <div class="sidebar-fixed-desktop">
    {% include 'components/sidebar-manager.html.twig' with {'active': 'activite'} %}
  </div>

  <!-- Barre mobile -->
  <div class="mobile-menu-bar d-md-none">
    <h5 class="mb-0">Menu</h5>
    <button class="btn btn-outline-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar">
      <i class="bi bi-list fs-4"></i>
    </button>
  </div>

  <!-- Sidebar mobile -->
  <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileSidebar">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title">Menu</h5>
      <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
      {% include 'components/sidebar-manager.html.twig' with {'active': 'activite'} %}
    </div>
  </div>

  <!-- Contenu principal -->
  <main class="container-fluid py-5">
    <h1 class="mb-5 text-center">Modification tâche</h1>

    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card p-4">
          <div class="card-body">
            <form action="/manager/modifier/tache" method="POST">
              <div class="mb-4">
                <label for="taskName" class="form-label">Tâche</label>
                <input type="text" class="form-control" id="taskName" value="{{tache.tache}}" name="tache" disabled>
              </div>
              <div class="mb-4">
                <label class="form-label">Activité</label>
                <input type="text" class="form-control" value="{{tache.activite.activite}}" disabled>
              </div>
              <div class="mb-4">
                <label class="form-label">Collaborateur</label>
                {% if tache.utilisateur is null %}
                  <p>Pas encore attribué</p>
                {% else %}
                  <input type="text" class="form-control" value="{{ tache.utilisateur.matricule}}" disabled>
                {% endif %}
              </div>
              <div class="mb-4">
                <label class="form-label">Estimation</label>
                <input type="number" class="form-control" value="{{tache.estimation}}" name="estimation" step="0.01" min="0">
              </div>
              <div class="mb-4">
                <label class="form-label">Date d'échéance</label>
                <input type="datetime-local" class="form-control" value="{{ tache.dateEcheance|date('Y-m-d\\TH:i') }}" name="dateEcheance">
              </div>
              <input type="hidden" name="id_tache" value="{{tache.id}}">
              <div class="text-center mt-5">
                <button type="submit" class="btn btn-lg btn-save">Enregistrer</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    {% block page_content %}{% endblock %}
  </main>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  {% block javascripts %}{% endblock %}
</body>
</html>
