<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Rapport PDF</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Helvetica', 'Arial', sans-serif;
            font-size: 13px;
            color: #333;
            margin: 30px;
        }

        h2 {
            font-weight: 600;
            color: #1a237e;
            margin-bottom: 5px;
        }

        em {
            color: #555;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .table th, .table td {
            border: 1px solid #ccc;
            padding: 8px 10px;
            vertical-align: middle;
        }

        .table th {
            background-color: #1a237e;
            color: #fff;
            font-weight: 600;
            text-align: center;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table-total-row {
            background-color: #c5cae9;
            font-weight: 600;
        }

        .text-right {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }

        /* Optionnel : logo */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .header img {
            height: 50px;
        }
    </style>
</head>
<body>
    <div class="header">
        <div>
            <h2>Rapport d'activité</h2>
            <p><em>{{ periode }}</em></p>
        </div>
        {# <img src="logo.png" alt="Logo"> #} 
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Tâche</th>
                <th>activité du tache</th>
                <th>Durée</th>
                <th>Commentaire</th>
            </tr>
        </thead>
        <tbody>
        {% for groupe in taches.details %}
            {% for tache in groupe.tache_terminee %}
                <tr>
                    {% if loop.first %}
                        <td class="text-center">{{ groupe.date }}</td>
                    {% else %}
                        <td></td>
                    {% endif %}
                    <td>{{ tache.tache.tache }}</td>
                    <td>{{ tache.tache.activite.activite }}</td>
                    <td class="text-right">{{ tache.tempsPasse }}</td>
                    <td>{{ tache.commentaire }}</td>
                </tr>
            {% endfor %}
            <tr class="table-total-row">
                <td colspan="2" class="text-right">Total</td>
                <td class="text-right">{{ groupe.total_duree }}</td>
                <td></td>
            </tr>
        {% endfor %}
        <tr class="table-total-row">
            <td colspan="2" class="text-right">Total semaine</td>
            <td class="text-right">{{ taches.total }}</td>
            <td></td>
        </tr>
        </tbody>
    </table>
</body>
</html>
